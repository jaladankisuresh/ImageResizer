<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imnotout.imageresizer.MainActivity">
    <Button android:id="@+id/btn_pick_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Video From Gallery" />
    <Button android:id="@+id/btn_capture_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Video" />
    <VideoView android:id="@+id/video_downsized"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
</LinearLayout>
